      <a class="nav-link <%= path === '/' ? 'active' : '' %>" href="/">Login</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= path === '/signup' ? 'active' : ''%>" href="/signup">Signup</a>
    </li>
    <% }else { %>
    <li class="nav-item">
      <a class="nav-link <%= path === '/colony' ? 'active' : ''%>" href="/colony">Add Colony</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= path === '/colonyList' ? 'active' : '' %>" href="/colonyList">Colony List</a>
    </li>
    <li class="nav-item">
      <form action="/logout" method="POST">
        <button ass="nav-link" type="submit">Logout</button>
